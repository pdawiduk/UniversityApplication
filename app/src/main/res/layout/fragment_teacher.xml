<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shogun.universityapplication.fragments.TeacherFragment"
    android:id="@+id/rvBox">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terminy Konsultacji"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textColor="@color/colorTulRed"
        android:layout_marginTop="40dp"
        android:minLines="2"
        android:id="@+id/tvvv"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvConsultationsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvvv"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />



</RelativeLayout>
